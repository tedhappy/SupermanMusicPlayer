        <shape>
            <gradient android:startColor="@color/maincolor" android:endColor="@color/maincolor" android:angle="270.0" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="line">
                <stroke android:width="2.0dip" android:color="@color/pbcolor" />
            </shape>
        </clip>
    </item>
</layer-list>